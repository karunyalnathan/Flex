    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.flex.ui.screens.home.HomeFragment"
        android:label="fragment_detail"
        tools:layout="@layout/workout" >
        <action
            android:id="@+id/action_homeFragment_to_workoutActivity"
            app:destination="@id/workoutActivity" />
        <action
            android:id="@+id/action_homeFragment_to_SettingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <activity
        android:id="@+id/workoutActivity"
        android:name="com.example.flex.WorkoutActivity"
        android:label="fragment_detail"
        tools:layout="@layout/workout" >
    </activity>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.flex.ui.screens.settings.SettingsFragment"
        android:label="fragment_edit"
        tools:layout="@layout/settings" >
